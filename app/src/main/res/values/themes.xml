<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.Inquize" parent="@style/Theme.AppCompat.DayNight.NoActionBar" />

    <style name="Theme.App.Splash" parent="Theme.SplashScreen">
        <item name="windowSplashScreenAnimatedIcon">@drawable/ic_splash_icon</item>
        <item name="windowSplashScreenBackground">@color/color_primary</item>
        <item name="postSplashScreenTheme">@style/Theme.Inquize</item>
        <!-- Status bar and Nav bar configs -->
        <item name="android:statusBarColor">@color/color_primary</item>
        <item name="android:navigationBarColor">@color/color_primary</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>
</resources>